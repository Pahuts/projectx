%section#full_slider.full_slider_inner.padding_0
  #pallax_slider.only_parallax.stars_dottat
    .vertical-center.center
      .row
        .col-md-12.col-sm-12.box-container
          %h1.text-center.login-header= t 'devise.invitations.edit.header'
          = form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f|
            = devise_error_messages!
            = f.hidden_field :invitation_token, readonly: true
            - if f.object.class.require_password_on_accepting
              %p.py-2
                = f.label :password
                %br/
                = f.password_field :password, class: "form-control"
              %p.py-2
                = f.label :password_confirmation
                %br/
                = f.password_field :password_confirmation, class: "form-control"
            %p= f.submit t("devise.invitations.edit.submit_button"), class: "btn btn-block btn-sm"
