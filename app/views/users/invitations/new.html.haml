/ Admin View
%section#full_slider.full_slider_inner.padding_0
  #pallax_slider.only_parallax.stars_dottat
    .vertical-center.center
      .row
        .col-md-12.col-sm-12.box-container
          %h1.text-center.login-header= t "devise.invitations.new.header"
          = form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f|
            = devise_error_messages!
            .form-group
              = f.label :email
              %br/
              = f.text_field :email, placeholder: "Email", class: "form-control"
            .form-group
              = f.label :first_name
              %br/
              = f.text_field :first_name, placeholder: "First Name", class: "form-control"
            .form-group
              = f.label :last_name
              %br/
              = f.text_field :last_name, placeholder: "Last Name", class: "form-control"
            %p= f.submit t("devise.invitations.new.submit_button"), class: "btn btn-block btn-sm"
