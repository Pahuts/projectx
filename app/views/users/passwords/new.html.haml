%section#full_slider.full_slider_inner.padding_0
  #pallax_slider.only_parallax.stars_dottat
    .vertical-center.center
      .row
        .col-md-12.col-sm-12.py-3.box-container
          .forgotpass-header.text-center Forgot your password?
          = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
            = devise_error_messages!
            .form-group
              = f.label :email
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'johndoe@projectx.com', class: 'form-control'
            .actions
              = f.submit "Send Instructions", class: "btn btn-block btn-sm"
